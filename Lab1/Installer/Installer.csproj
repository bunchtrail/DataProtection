<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\LicenseCore\LicenseCore.csproj" />
    <ProjectReference Include="..\Project1\Project1.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
    <ProjectReference Include="..\Uninstaller\Uninstaller.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
  </ItemGroup>

  <Target Name="CopyAppFiles" BeforeTargets="PrepareForBuild">
    <Message Text="Copying application files..." Importance="high" />
    <Copy SourceFiles="$(ProjectDir)\..\Project1\bin\$(Configuration)\$(TargetFramework)\ProtectedApp.exe"
          DestinationFolder="$(ProjectDir)\Resources" />
    <Copy SourceFiles="$(ProjectDir)\..\Uninstaller\bin\$(Configuration)\$(TargetFramework)\Uninstaller.exe"
          DestinationFolder="$(ProjectDir)\Resources" />
  </Target>

  <ItemGroup>
    <EmbeddedResource Include="Resources\ProtectedApp.exe" />
    <EmbeddedResource Include="Resources\Uninstaller.exe" />
  </ItemGroup>

</Project>
